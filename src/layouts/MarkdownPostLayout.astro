---
import Category from "../components/Category.astro";
import Main from "../components/main.astro";
import BaseLayout from "./BaseLayout.astro";
import "../styles/mdBase.css"
// const allPosts = await Astro.glob("../pages/posts/*.md");
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <Main>
    <!-- 插入标签页 -->
    <Category slot="tags" tags={frontmatter.tags} />
    <div class="box1" slot="show">
      <!-- 展示区域 -->
      <div class="showInfo">
        <h1>{frontmatter.title}</h1>
        <div class="showBaseInfo">
          <div>💻编辑时间： <span>{frontmatter.pubDate}</span></div>
          <div>
            🔍字数统计： <span>{frontmatter.minutesRead.words}字</span>
          </div>
          <div>
            🕑阅读时长： <span
              >{Math.floor(frontmatter.minutesRead.minutes)}min{
                Math.floor(
                  (frontmatter.minutesRead.minutes -
                    Math.trunc(frontmatter.minutesRead.minutes)) *
                    60,
                )
              }s</span
            >
          </div>
        </div>

        <slot />
        <a href="">下一篇</a>
      </div>
    </div>
  </Main>
</BaseLayout>
<style lang="less" scoped>
  .box1 {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    .showInfo {
      padding: 40px 20px;
      width: 880px;
      margin-left: 20px;
      background-color: rgba(255, 255, 255, 0.7);
      position: relative;
      float: right;
      border-radius: 10px;
      .showBaseInfo {
        letter-spacing: 2px;
      }
    }
  }
</style>
