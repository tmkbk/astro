---
// 这里是博客列表展示的组件
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "mkbk的 Astro 学习博客";
---

<div class="box1">
  <!-- 展示区域 -->
  <div class="showInfo">
    <h4>{pageTitle}</h4>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style lang="less" scoped>
  .box1 {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    .showInfo {
      padding: 40px 20px;
      width: 880px;
      margin-left: 20px;
      background-color: rgba(255, 255, 255, 0.7);
      position: relative;
      float: right;
      border-radius: 10px;
    }
  }
</style>
